<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>entrypointappServlet</servlet-name>
    <servlet-class>se.esss.litterbox.stoneedgeivgwt.server.EntryPointAppServiceImpl</servlet-class>
    <!--     <load-on-startup /> -->
  </servlet>
  
  <servlet>
    <servlet-name>mqttServlet</servlet-name>
    <servlet-class>se.esss.litterbox.stoneedgeivgwt.server.MqttServiceImpl</servlet-class>
    <!--     <load-on-startup /> -->
  </servlet>
  
  <servlet-mapping>
    <servlet-name>entrypointappServlet</servlet-name>
    <url-pattern>/stoneedgeivgwt/entrypointapp</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>mqttServlet</servlet-name>
    <url-pattern>/stoneedgeivgwt/mqtt</url-pattern>
  </servlet-mapping>

  <filter>
	<filter-name>gwtCacheControlFilter</filter-name>
	<filter-class>se.esss.litterbox.stoneedgeivgwt.server.GWTCacheControlFilter</filter-class>
  </filter>

  <filter-mapping>
	<filter-name>gwtCacheControlFilter</filter-name>
	<url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>StoneEdgeIVGwt.html</welcome-file>
  </welcome-file-list>
  
  <security-constraint>
      <web-resource-collection>
          <web-resource-name>*</web-resource-name>
          <url-pattern>/*</url-pattern>
          <http-method>GET</http-method>
          <http-method>POST</http-method>
      </web-resource-collection>
      <auth-constraint>
          <role-name>stoneEdgeSettingsPermitted</role-name>
          <role-name>stoneEdgeViewOnly</role-name>
      </auth-constraint>
      <user-data-constraint>
          <transport-guarantee>NONE</transport-guarantee>
      </user-data-constraint>
	</security-constraint>
	<login-config>
		<auth-method>BASIC</auth-method>
	</login-config>
  
</web-app>
